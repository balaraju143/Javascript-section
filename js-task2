// 9. Student Object
// - Create object with name, age, course, city.
// - Print values using dot notation.
let Student={
    Name:"Raju",
    age:26,
    course: "Frontend Developer",
    city:"Hyderabad"
};

console.log("Student Name:",(Student.Name)); //Raju
console.log("Student Age:",(Student.age));   //26 
console.log("Student Course:",(Student.course)); //Frontend Developer
console.log("Student City:",(Student.city));  //Hyderabad

// 10. Nested Object Practice
// - Create company object with nested trainer object.
// - Print company name, trainer name, trainer subject.
let company={
    company_name:"Stackly",
    trainer:{
        name:"Naveen",
        subject:"JavaScript"
    }
};
console.log(company.company_name); //Stackly
console.log(company.trainer.name); //Naveen
console.log(company.trainer.subject);//JavaScript































